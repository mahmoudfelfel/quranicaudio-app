    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "^7.4.0",
    "jest": "21.2.1",
    "lint-staged": "^3.4.1",
    "precommit": "^1.2.2",
    "prettier": "^1.14.0",
    "react-test-renderer": "16.0.0"
  },
  "jest": {
    "preset": "react-native"
  },
  "pre-commit": [
    "npm run recommit-hook"
